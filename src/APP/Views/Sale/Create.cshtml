@using APP.Shared
@model APP.Models.ViewModels.SaleViewModelCreate
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form id="create" action="javascript:void(0)">    
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Sale!.Serie" class="form-label"></label>
                        <input asp-for="Sale!.Serie" type="text"
                               id="serie" 
                            class="form-control"
                            placeholder="Serie"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Sale!.Number" class="form-label"></label>
                        <input asp-for="Sale!.Number" type="text"
                            id="number" 
                            class="form-control" 
                            placeholder="Number"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="VendorName" class="form-label"></label>
                        <select asp-for="VendorName" asp-items="Model.Vendors" id="VendorId" class="form-select" data-choices-sorting="true">
                            <option selected>Search Vendor...</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">                        
                        <label asp-for="Sale!.DateOfIssue" class="form-label"></label>  
                        <input asp-for="Sale!.DateOfIssue" class="form-control" />
                        <span asp-validation-for="Sale!.DateOfIssue" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">                                                                                
                    @await Html.PartialAsync("Partials/_SaleDetail_Create", Model.SaleDetails)
                </div>

                <div class="col-lg-12">
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>